{
  "name": "your-extension-name",
  "displayName": "Your Extension Display Name",
  "description": "Description of your extension",
  "version": "1.0.0",
  "engines": {
      "vscode": "^1.0.0"
  },
  "categories": ["Other"],
  "activationEvents": [
      "onCommand:extension.refreshTree"
  ],
  "main": "extension.js",
  "contributes": {
      "views": {
          "explorer": [
              {
                  "id": "helloWorld",
                  "name": "Hello World",
                  "iconPath": {
                      "light": "resources/light/icon.svg",
                      "dark": "resources/dark/icon.svg"
                  }
              }
          ]
      },
      "commands": [
          {
              "command": "extension.refreshTree",
              "title": "Refresh Tree View"
          }
      ]
  },
  "dependencies": {
      "vscode": "^1.0.0"
  }
}
